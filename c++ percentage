#include <iostream>
using namespace std;

int main() {
    int n; // Number of subjects
    cout << "Enter the number of subjects: ";
    cin >> n;

    float marks[n], total = 0;

    // Input marks
    for(int i = 0; i < n; i++) {
        cout << "Enter marks for subject " << i + 1 << ": ";
        cin >> marks[i];
        total += marks[i];
    }

    float percentage = (total / (n * 100)) * 100; // Assuming each subject is out of 100

    cout << "Total Marks: " << total << endl;
    cout << "Percentage: " << percentage << "%" << endl;

    return 0;
